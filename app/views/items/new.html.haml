.sellpage
  .signup-page-header
    %header.personal-entry__header
      = render "layouts/entry-header"
  %main.sell-main
    %section.sell-wrapper
      .sell-container
        .sell-container__inner
          = form_for @item do |f|
            %h2.sell-container__head 商品の情報を入力
            .sell-form
              .upload-wrapper
                %h3.upload-wrapper__head
                  出品画像
                  %span.form-require 必須
                %p 最大10枚までアップロードできます
                .upload-dropbox__area
                  .upload-container
                    .uploads
                      %ul
                        -# 画像アップロード時のstyleです。jsで使用？
                        -# %li.upload-box
                        -#   %figure.upload-figure.landscape
                        -#     %img=image_tag 'mercari_profile.png'
                        -#   .upload-btn
                        -#     =link_to '編集', '#', class: 'upload-edit'
                        -#     =link_to '削除', '#'
                = f.label :images, class: "image-label" do
                  .image-form-box
                    %p ドラッグアンドドロップ
                    %p またはクリックしてファイルをアップロード
                  %i.fas.fa-camera.icon-camera
                  = f.file_field :images, multiple: true, class: "image-label__input"

              .sell-content
                .form-group
                  = f.label "商品名"
                  %span.form-require 必須
                  %div
                    = f.text_field :name, placeholder: "商品名（必須 40文字まで)", value: "", class: "input-default"
                .form-group
                  = f.label "商品の説明"
                  %span.form-require 必須
                  = f.text_area :description, placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" , class: "textarea-default", rows: "5"
              .sell-content
                %h3.sell-sub-head 商品の詳細
                .sell-form-box
                  .form-group
                    %label カテゴリー
                    %span.form-require 必須
                    %div
                      = f.fields_for :items_categories do |parent|
                        #parent-form-area
                          .select-warp
                            = parent.collection_select :category_id, @parents, :id, :name,{prompt: "---"}, class: "select-default", id: "parent-form"
                            %i.fas.fa-angle-down
                        #children-form-area
                        #grandchild-form-area
                  .form-group.hidden
                    %label サイズ
                    %span.form-require 必須
                    %div
                      .select-warp
                        = f.select :size, Item.sizes.map{ |k, v| [t("enums.item.sizes.#{k}"), v] },{prompt: "---"}, class: "select-default"
                        %i.fas.fa-angle-down
                  .form-group.hidden.brand--container
                    = f.fields_for :brand do |brand|
                      = brand.label "ブランド"
                      %span.form-require-gray 任意
                      %div
                        = brand.text_field :name, placeholder: "例）シャネル", value: "",class: "input-default"
                  .form-group
                    = f.label "商品の状態"
                    %span.form-require 必須
                    %div
                      .select-warp
                        = f.select :item_status, Item.item_statuses.map{ |k, v| [t("enums.item.item_statuses.#{k}"), v] },{prompt: "---"}, class: "select-default"
                        %i.fas.fa-angle-down
              .sell-content
                = f.fields_for :shipment do |shipment|
                  %h3.sell-sub-head 配送について
                  = link_to root_path do
                    .form-question ?
                  .sell-form-box
                    .form-group
                      = shipment.label "配送料の負担"
                      %span.form-require 必須
                      %div
                        .select-warp
                          = shipment.select :cost_payer, Shipment.cost_payers.map{ |k, v| [t("enums.shipment.cost_payers.#{k}"), v] }, {prompt: "---"}, class: "select-default", id: "shipment-cost-form"
                          %i.fas.fa-angle-down
                    .form-group.shipment-hidden
                      = shipment.label "配送の方法"
                      %span.form-require 必須
                      %div
                        .select-warp
                          = shipment.select :method, Shipment.methods.map{ |k, v| [t("enums.shipment.methods.#{k}"), v] }, {prompt: "---"}, class: "select-default"
                          %i.fas.fa-angle-down
                    .form-group
                      = shipment.label "発送元の地域"
                      %span.form-require 必須
                      %div
                        .select-warp
                          = shipment.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "--"}, {class: "select-default"}
                          %i.fas.fa-angle-down
                    .form-group
                      = shipment.label "発送までの日数"
                      %span.form-require 必須
                      %div
                        .select-warp
                          = shipment.select :days, Shipment.days.map{ |k, v| [t("enums.shipment.days.#{k}"), v] }, {prompt: "---"}, class: "select-default"
                          %i.fas.fa-angle-down
            .sell-content
              %h3.sell-sub-head 販売価格(300〜9,999,999)
              = link_to root_path do
                .form-question ?
              .sell-form-box
                %ul.sell-price
                  %li.form-group
                    .price-box
                      %label.l-left
                        価格
                        %span.form-require 必須
                      .l-right.sell-price-input
                        ¥
                        %div
                          = f.text_field :price, placeholder: "例）300", value: "", class: "input-default input-price", id: "price-input-box"
                  %li.clearfix
                    .l-left.commission
                      販売手数料 (10%)
                    #commission.l-right -
                  %li.clearfix
                    .l-left.profit
                      販売利益
                    #profit.l-right -
            .sell-content.sell-btn-box
              %div
                %p
                  = link_to "禁止されている出品", "/", class: "caution"
                  、
                  = link_to "行為", "/", class: "caution"
                  を必ずご確認ください。
                %p
                  またブランド品でシリアルナンバー等がある場合はご記載ください。
                  = link_to "偽ブランドの販売", "/", class: "caution"
                  は犯罪であり処罰される可能性があります。
                %p
                  また、出品をもちまして
                  = link_to "加盟店契約", "/", class: "caution"
                  に同意したことになります。
              %button.btn-default.btn-red{type: "submit"} 出品する
              = link_to "もどる", "/", class: "btn-default btn-gray"
  = render "layouts/entry-footer"
