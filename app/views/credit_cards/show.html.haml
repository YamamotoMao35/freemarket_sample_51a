= render 'layouts/header'

.credit-card-show
  - breadcrumb :card_edit
  = render "render/bread-crumbs"
  .l-container.clearfix
    .l-content
      %section.l-chapter-container
        %h2.l-chapter-container__head 支払い方法
        .l-single-inner
          %section
            .l-single-content
              %label クレジットカード一覧
            %ul.payment-list
              %li
                =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?613125057", width: "49", height: "15", alt: "")
                .setting-payment-num
                  = "**** **** **** " + @default_card_information.last4
                .setting-payment-num
                  - exp_month = @default_card_information.exp_month.to_s
                  - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                  = exp_month + " / " + exp_year
                = form_tag(delete_credit_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
                  %input{ type: "hidden", name: "card_id", value: "" }
                  %button{style: "cursor:pointer"} 削除する
          .settings-not-regist
            = link_to '支払い方法について', "/"
            %i.fas.fa-angle-right

    = render 'render/sidelist'
= render 'layouts/footer'
= render 'render/footer-sell-btn'

