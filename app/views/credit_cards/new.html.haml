= render 'layouts/header'

.credit-card-create
  - breadcrumb :card_edit
  = render "render/bread-crumbs"
  .l-container.clearfix
    .l-content
      %section.l-chapter-container
        %h2.l-chapter-container__head クレジットカード情報入力
        = form_tag(pay_credit_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
          .single-content
            .form-group
              %label カード番号
              %span.form-group-require  必須
              = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              %ul.card-list
                %li
                  = image_tag("credit-cards/visa.svg", width: '49', height: '20', alt: '')
                %li
                  = image_tag("credit-cards/Mastercard.svg", width: "34", height: "20", alt: "")
                %li
                  = image_tag("credit-cards/Saison_card.svg", width: "30", height: "20", alt: "")
                %li
                  = image_tag("credit-cards/JCB.svg", width: "32", height: "20", alt: "")
                %li
                  = image_tag("credit-cards/American_Express.svg", width: "21", height: "20", alt: "")
                %li
                  = image_tag("credit-cards/Diners_Club.svg", width: "32", height: "20", alt: "")
                %li
                  = image_tag("credit-cards/discover.svg", width: "32", height: "20", alt: "")
              %br
            .form-group-second
              %label 有効期限
              %span.form-group-second__require 必須
              %div
                %select#exp_month{name: "exp_month", type: "text"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                .icon-arrow-bottom
                  %i.fas.fa-angle-down 
                  %span 月
              %div
                %select#exp_year{name: "exp_year", type: "text"}
                  %option{value: ""} --
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                .icon-arrow-bottom
                  %i.fas.fa-angle-down
                  %span 年
              %br
            .form-group-third
              %label セキュリティコード
              %span.form-groupthird__require 必須
              = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
              .signup-seqcode
                .signup-seqcode-text 
                  %span.signup-seqcode-text__question ?
                  カード裏側の番号とは？
            #card_token
            = submit_tag "追加する", id: "token_submit"
    = render 'render/sidelist'

= render 'layouts/footer'

= render 'render/footer-sell-btn'

