.header
  .wrapper
    .header-top
      = link_to root_path do
        %h1.header-top__logo
          = image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2265978350", alt: "mercari", width: '134', height: '36')
      .header-top__form
        = render "layouts/form"
    .header-nav-box.clearfix
      %nav.header-nav-box__left
        .header-nav-left
          %i.header-nav-left__mask
            %i.fas.fa-list
          %span カテゴリーから探す
        .header-nav-left
          %i.header-nav-left__mask
            %i.fas.fa-tag
          %span ブランドから探す
      - if user_signed_in?
        .header-nav-box__right
          .header-nav-right
            %i.header-nav-right__mask
              %i.far.fa-bell.fa-lg
            %span お知らせ
          .header-nav-right
            %i.header-nav-right__mask
              %i.fas.fa-check.fa-lg
            %span やることリスト
          .header-nav-right
            %i.header-nav-right__mask
              %i.fas.fa-user-circle.fa-lg
            = link_to user_path(current_user)  do
              %span マイページ
      - else
        .header-nav-box__right
          .header-nav-right
            %i.header-nav-right__mask
              = link_to "新規会員登録",users_sign_up_index_path, class: "header-btn header-btn-signup"
          .header-nav-right
            %i.header-nav-right__mask
              = link_to "ログイン",new_user_session_path, class: "header-btn header-btn-signin"
          