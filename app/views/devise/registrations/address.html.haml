.personal-entry
  .signup-page-header
    %header.personal-entry__header
      = render "layouts/entry-header"
      %nav.progress-bar.signup-bar
        %ol.clearfix
          %li.through
            会員情報
            .progress-status
          %li.through
            電話番号認証
            .progress-status
          %li.active
            お届け先住所入力
            .progress-status
          %li
            支払い方法
            .progress-status
          %li
            完了
            .progress-status
  %main.personal-entry-main
    %section.entry-container
      %h2.entry-container__head
        住所入力
      .single-inner.entry-form
        .person-content
          = form_for @address do |f|
            %ul
              %li
                = f.label :"お名前"
                %span.form-require 必須
                = f.text_field :name,placeholder: "例) 山田",class: "input-default"
                = f.text_field :name,placeholder: "例) 彩",class: "input-default"
              %li
                = f.label :"お名前カナ"
                %span.form-require 必須
                = f.text_field :name,placeholder: "例) ヤマダ",class: "input-default"
                = f.text_field :name,placeholder: "例) アヤ",class: "input-default"
              %li
                = f.label :"郵便番号"
                %span.form-require 必須
                = f.text_field :name,placeholder: "例) 123-4567",class: "input-default"
              %li
                = f.label :"都道府県"
                %span.form-require 必須
                .prefecture-info
                  .select-wrap
                    .input-default
                      北海道
                      %i.fas.fa-angle-down
              %li
                = f.label :"市区町村"
                %span.form-require 必須
                = f.text_field :name,placeholder: "例) 横浜市緑区",class: "input-default"
              %li
                = f.label :"番地"
                %span.form-require 必須
                = f.text_field :name,placeholder: "例) 青山1-1-1",class: "input-default"
              %li
                = f.label :"建物名"
                %span.form-require-gray 任意
                = f.text_field :name,placeholder: "例) 柳ビル103",class: "input-default"
              %li
                = f.label :"電話"
                %span.form-require-gray 任意
                = f.text_field :name,placeholder: "例) 09012345678",class: "input-default"
              %li.actions
                = link_to users_payment_path do
                  = f.submit "次へ進む", class:"btn-default btn-red"
  = render "layouts/entry-footer"