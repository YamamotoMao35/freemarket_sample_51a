.registration-page
  .new-registration
    %header.new-registration__header
      %h1
        = link_to root_path do
          = image_tag "logo.svg", alt: "mercari"
    %main.registration-menu
      %section.registration-title
        %h2.registration-title__head
          新規会員登録
        .registration-box
          .registration-box__content
            = link_to new_user_registration_path, class: "btn-default btn-mail" do
              %i.far.fa-envelope.icon-mail
              メールアドレスで登録
            %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
              = link_to user_facebook_omniauth_authorize_path do
                %i.icon-facebook
                  = image_tag "facebook-icon.svg", alt:"facebook", width: "26px",height: "26px";
                Facebookで登録
            %button#google-login.btn-default.btn-sns.btn-sns__google
              = link_to user_google_oauth2_omniauth_authorize_path do
                Googleで登録
            = link_to "ログイン", new_user_session_path
            = link_to "ログアウト", destroy_user_session_path,method: :delete
    = render 'layouts/entry-footer'
